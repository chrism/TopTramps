<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Littlesis</th>
    <th>Position</th>
    <th>Summary</th>
    <th>Organization</th>
    <th>Age</th>
    <th>Wealth</th>
    <th>Friends</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Image url</th>
    <th>Donations</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.littlesis_id %></td>
    <td><%= person.position %></td>
    <td><%= person.summary %></td>
    <td><%= person.organization %></td>
    <td><%= person.age %></td>
    <td><%= person.wealth %></td>
    <td><%= person.friends %></td>
    <td><%= person.height %></td>
    <td><%= person.weight %></td>
    <td><%= person.image_url %></td>
    <td><%= person.donations %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

